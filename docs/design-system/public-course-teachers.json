{
  "design_profile": {
    "name": "Course Publish â€“ Web Layout",
    "description": "Full-width web dashboard page for editing a course, with a dark vertical sidebar, top breadcrumb + action bar, and two-column main layout (editor + side panel)."
  },
  "foundations": {
    "colors": {
      "mode": "light",
      "background": {
        "app": "#F3F4F8",
        "sidebar": "#111118",
        "topbar": "#FFFFFF",
        "canvas": "#FFFFFF",
        "section": "#FFFFFF",
        "section_alt": "#F8FAFF"
      },
      "text": {
        "primary": "#111827",
        "secondary": "#4B5563",
        "muted": "#9CA3AF",
        "placeholder": "#9CA3AF",
        "on_dark": "#F9FAFB",
        "on_accent": "#FFFFFF"
      },
      "accent": {
        "primary": "#A855F7",          // main CTA button / highlights
        "primary_soft": "#F4E9FF",
        "secondary": "#6366F1",
        "border_subtle": "rgba(15, 23, 42, 0.10)",
        "border_strong": "rgba(15, 23, 42, 0.18)",
        "focus": "#A855F7"
      },
      "status": {
        "success": "#22C55E",
        "warning": "#F59E0B",
        "danger": "#EF4444",
        "info": "#0EA5E9"
      },
      "tags": {
        "filled_dark_bg": "#000000",
        "filled_dark_text": "#F9FAFB"
      }
    },
    "typography": {
      "font_family": "system-ui, -apple-system, BlinkMacSystemFont, 'SF Pro Text', 'Inter', sans-serif",
      "scale": {
        "page_title": { "size": 28, "weight": 700, "line_height": 1.25 },
        "section_title": { "size": 18, "weight": 600, "line_height": 1.35 },
        "card_title": { "size": 15, "weight": 600, "line_height": 1.35 },
        "label": { "size": 12, "weight": 500, "line_height": 1.4 },
        "body": { "size": 14, "weight": 400, "line_height": 1.55 },
        "small": { "size": 12, "weight": 400, "line_height": 1.45 },
        "meta": { "size": 11, "weight": 400, "line_height": 1.4 }
      },
      "styles": {
        "breadcrumb": { "size": 12, "weight": 400 },
        "button": { "size": 14, "weight": 600 },
        "chip": { "size": 11, "weight": 500, "uppercase": true, "letter_spacing": 0.04 }
      }
    },
    "spacing": {
      "unit": 4,
      "page_padding": { "x": 32, "y": 24 },
      "topbar_padding": { "x": 32, "y": 16 },
      "canvas_padding": { "x": 24, "y": 24 },
      "card_padding": { "x": 20, "y": 18 },
      "gaps": {
        "between_sections": 24,
        "between_cards": 20,
        "between_fields": 16,
        "between_list_items": 10,
        "between_columns": 24
      }
    },
    "radius": {
      "sm": 6,
      "md": 10,
      "lg": 16,
      "pill": 999
    },
    "shadows": {
      "card": "0 10px 30px rgba(15, 23, 42, 0.10)",
      "soft": "0 4px 16px rgba(15, 23, 42, 0.06)"
    },
    "iconography": {
      "style": "rounded line icons",
      "size": { "sm": 14, "md": 18, "lg": 20 }
    }
  },
  "layout": {
    "grid_system": {
      "columns": 12,
      "max_width": 1440,
      "gutter": 24
    },
    "page_structure": {
      "sidebar": {
        "width": 80,
        "position": "fixed_left",
        "background": "colors.background.sidebar",
        "content_order": [
          "logo_icon_top",
          "nav_icons_stack_middle",
          "support_and_settings_bottom"
        ]
      },
      "main_wrapper": {
        "margin_left": 80,
        "background": "colors.background.app"
      },
      "topbar": {
        "height": 76,
        "background": "colors.background.topbar",
        "content": {
          "left": ["search_field", "breadcrumb"],
          "right": ["notification_icon", "user_avatar"]
        }
      },
      "header_row": {
        "background": "colors.background.topbar",
        "padding_x": 32,
        "padding_y": 12,
        "content": {
          "left": ["page_title"],
          "right": ["ghost_button_cancel", "primary_button_save"]
        }
      },
      "content_area": {
        "background": "colors.background.app",
        "padding": "foundations.spacing.page_padding",
        "columns": [
          {
            "id": "editor",
            "span": 8,
            "min_width": 640,
            "sections": ["basic_info_card", "content_card"]
          },
          {
            "id": "side_panel",
            "span": 4,
            "min_width": 320,
            "sections": ["preview_card", "status_card", "level_card", "org_card", "pricing_card"]
          }
        ]
      }
    }
  },
  "components": {
    "sidebar_nav": {
      "item": {
        "size": 44,
        "shape": "rounded_square",
        "alignment": "center",
        "icon_size": 20,
        "states": {
          "default": { "bg": "transparent", "icon_color": "colors.text.on_dark", "opacity": 0.7 },
          "hover": { "bg": "rgba(148, 163, 184, 0.18)", "opacity": 1 },
          "active": { "bg": "#FFFFFF", "icon_color": "colors.accent.primary" }
        },
        "layout": "vertical group with equal spacing"
      }
    },
    "search_field": {
      "placement": "topbar_left",
      "width": 320,
      "height": 40,
      "border_radius": 999,
      "background": "#F3F4F6",
      "icon": "search_left",
      "placeholder_style": "typography.small, muted"
    },
    "breadcrumb": {
      "placement": "topbar_left_under_search",
      "separator": "/",
      "inactive_style": "typography.breadcrumb, muted",
      "active_style": "typography.breadcrumb, secondary",
      "spacing_top": 8
    },
    "page_title": {
      "style": "typography.page_title",
      "margin_top": 8,
      "margin_bottom": 16
    },
    "primary_button": {
      "height": 40,
      "padding_x": 22,
      "border_radius": "radius.pill",
      "font": "typography.styles.button",
      "background": "colors.accent.primary",
      "text_color": "colors.text.on_accent",
      "variants": {
        "ghost": {
          "background": "#F3F4F6",
          "text_color": "colors.text.primary"
        }
      }
    },
    "card_base": {
      "background": "colors.background.canvas",
      "border_radius": "radius.lg",
      "shadow": "shadows.card",
      "padding": "foundations.spacing.card_padding"
    },
    "basic_info_card": {
      "extends": "card_base",
      "title": {
        "text": "Basic info",
        "style": "typography.section_title",
        "margin_bottom": 16
      },
      "fields": [
        "text_input_name",
        "rich_text_description",
        "hero_image_field"
      ],
      "gap_between_fields": 18
    },
    "form_field": {
      "label": {
        "placement": "top",
        "style": "typography.label",
        "color": "colors.text.secondary",
        "margin_bottom": 4
      },
      "input": {
        "height": 40,
        "border_radius": 10,
        "border": "1px solid colors.accent.border_subtle",
        "background": "#FFFFFF",
        "padding_x": 12
      },
      "textarea": {
        "min_height": 120,
        "padding": 12,
        "border_radius": 10,
        "border": "1px solid colors.accent.border_subtle"
      },
      "char_counter": {
        "placement": "bottom_right",
        "style": "typography.meta",
        "color": "colors.text.muted"
      }
    },
    "rich_text_toolbar": {
      "height": 40,
      "background": "#F9FAFB",
      "border_bottom": "1px solid colors.accent.border_subtle",
      "buttons": [
        "typography_dropdown",
        "bold",
        "italic",
        "underline",
        "list_bulleted",
        "list_numbered",
        "alignment",
        "link"
      ],
      "button_style": {
        "size": 28,
        "shape": "rounded_square",
        "hover_bg": "#E5E7EB",
        "active_bg": "colors.accent.primary_soft",
        "active_icon_color": "colors.accent.primary"
      }
    },
    "hero_image_field": {
      "container": {
        "border_radius": 14,
        "overflow": "hidden",
        "border": "1px solid colors.accent.border_subtle",
        "margin_top": 10
      },
      "image": {
        "aspect_ratio": "16:9",
        "object_fit": "cover"
      },
      "overlay_link": {
        "position": "top_right",
        "text_style": "typography.small, accent.primary",
        "background": "rgba(255,255,255,0.85)",
        "border_radius": "radius.pill",
        "padding_x": 8,
        "padding_y": 4
      }
    },
    "content_card": {
      "extends": "card_base",
      "header": {
        "title": "Content",
        "style": "typography.section_title",
        "right_action": {
          "type": "text_button",
          "label": "Add new section",
          "color": "colors.accent.primary",
          "icon": "plus"
        }
      },
      "list_item": {
        "container": {
          "background": "colors.background.section_alt",
          "border_radius": 14,
          "border": "1px solid colors.accent.border_subtle",
          "padding": 14
        },
        "layout": "drag_handle + caret_icon + title_text + spacer + edit_button + kebab_menu",
        "drag_handle": { "icon": "dots", "opacity": 0.6 },
        "title_style": "typography.body",
        "button": {
          "label": "Edit",
          "variant": "ghost",
          "height": 32,
          "border_radius": "radius.pill"
        },
        "spacing_vertical": 10
      }
    },
    "side_panel_card_base": {
      "extends": "card_base",
      "padding": { "x": 18, "y": 16 }
    },
    "preview_card": {
      "extends": "side_panel_card_base",
      "title": {
        "text": "Preview course",
        "style": "typography.card_title"
      },
      "subtitle": {
        "style": "typography.small",
        "color": "colors.text.muted",
        "margin_bottom": 12
      },
      "button": {
        "label": "Preview",
        "variant": "outline",
        "full_width": true,
        "height": 36,
        "border_radius": "radius.pill",
        "border_color": "colors.accent.border_strong"
      }
    },
    "status_card": {
      "extends": "side_panel_card_base",
      "title": { "text": "Course status", "style": "typography.card_title" },
      "fields": [
        "select_product_status",
        "toggle_hide_course"
      ],
      "select_style": {
        "height": 40,
        "border_radius": 10,
        "border": "1px solid colors.accent.border_subtle",
        "icon": "chevron_down_right"
      },
      "toggle": {
        "type": "switch",
        "track_bg_off": "#E5E7EB",
        "track_bg_on": "colors.accent.primary",
        "thumb_color": "#FFFFFF"
      }
    },
    "level_card": {
      "extends": "side_panel_card_base",
      "title": { "text": "Course level", "style": "typography.card_title" },
      "field": "select_level"
    },
    "org_card": {
      "extends": "side_panel_card_base",
      "title": { "text": "Organisations", "style": "typography.card_title" },
      "fields": [
        "select_university",
        "select_specialisation",
        "tags_input"
      ],
      "tags_input": {
        "max_tags": 10,
        "tag_style": {
          "background": "colors.tags.filled_dark_bg",
          "text_color": "colors.tags.filled_dark_text",
          "border_radius": "radius.pill",
          "padding_x": 10,
          "padding_y": 4,
          "gap": 8
        }
      }
    },
    "pricing_card": {
      "extends": "side_panel_card_base",
      "title": { "text": "Pricing", "style": "typography.card_title" },
      "fields": [
        "price_field",
        "sale_amount_field",
        "discount_slider",
        "final_price_field"
      ],
      "currency_field": {
        "layout": "label_top + input_with_suffix",
        "suffix": "currency code",
        "input_alignment": "right"
      },
      "slider": {
        "track_height": 4,
        "track_bg": "#E5E7EB",
        "active_bg": "colors.accent.primary_soft",
        "thumb_size": 16,
        "thumb_color": "colors.accent.primary"
      },
      "actions_row": {
        "layout": "space-between",
        "buttons": [
          { "variant": "ghost", "label": "Reset sale" },
          { "variant": "primary", "label": "Apply" }
        ]
      }
    },
    "avatar": {
      "shape": "circle",
      "size": 32,
      "border": "2px solid #FFFFFF"
    }
  },
  "interaction": {
    "hover_effects": {
      "buttons": {
        "primary": { "brightness": 1.05, "shadow": "shadows.soft" },
        "ghost": { "background": "#E5E7EB" }
      },
      "list_items": {
        "background_lighten": true,
        "shadow": "shadows.soft"
      },
      "sidebar_icons": {
        "scale": 1.02
      }
    },
    "focus_states": {
      "outline": "2px solid colors.accent.focus",
      "outline_offset": 2,
      "applies_to": ["inputs", "selects", "buttons"]
    },
    "transitions": {
      "duration_ms": 150,
      "easing": "ease-out",
      "properties": ["background-color", "border-color", "box-shadow", "transform"]
    }
  },
  "responsiveness": {
    "breakpoints": {
      "md": 768,
      "lg": 1024,
      "xl": 1280
    },
    "behavior": {
      "xl": "two-column layout with fixed-width sidebar and full side panel",
      "lg": "reduce gutters; side panel remains on the right",
      "md": "side panel stacks below editor; sidebar stays fixed",
      "sm": "sidebar collapses to overlay or top bar; content becomes single-column"
    }
  }
}
