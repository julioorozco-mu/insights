{
  "design_profile": {
    "name": "Buy Course â€“ Web Layout",
    "description": "Course detail and purchase page with two-column layout: left column for course description and content, right column for pricing, purchase CTA, and course highlights."
  },
  "foundations": {
    "colors": {
      "mode": "light",
      "background": {
        "app": "#F3F4F8",
        "page": "#F3F4F8",
        "canvas": "#FFFFFF",
        "card": "#FFFFFF",
        "card_alt": "#F9FAFF",
        "cta_dark": "#111827"
      },
      "text": {
        "primary": "#111827",
        "secondary": "#4B5563",
        "muted": "#9CA3AF",
        "on_dark": "#F9FAFB",
        "on_accent": "#FFFFFF"
      },
      "accent": {
        "primary": "#A855F7",
        "primary_soft": "#F4E9FF",
        "secondary": "#6366F1",
        "price": "#16A34A",
        "border_subtle": "rgba(15,23,42,0.10)",
        "border_strong": "rgba(15,23,42,0.18)",
        "focus": "#A855F7"
      },
      "status": {
        "success": "#22C55E",
        "warning": "#F59E0B",
        "danger": "#EF4444",
        "info": "#0EA5E9"
      }
    },
    "typography": {
      "font_family": "system-ui, -apple-system, BlinkMacSystemFont, 'SF Pro Text', 'Inter', sans-serif",
      "scale": {
        "page_title": { "size": 26, "weight": 700, "line_height": 1.25 },
        "section_title": { "size": 18, "weight": 600, "line_height": 1.35 },
        "card_title": { "size": 16, "weight": 600, "line_height": 1.35 },
        "body_lg": { "size": 15, "weight": 400, "line_height": 1.6 },
        "body": { "size": 14, "weight": 400, "line_height": 1.55 },
        "small": { "size": 12, "weight": 400, "line_height": 1.45 },
        "meta": { "size": 11, "weight": 400, "line_height": 1.4 }
      },
      "styles": {
        "breadcrumb": { "size": 12, "weight": 400 },
        "button": { "size": 14, "weight": 600 },
        "chip": { "size": 11, "weight": 500, "uppercase": true, "letter_spacing": 0.04 },
        "price_main": { "size": 28, "weight": 700 },
        "price_old": { "size": 16, "weight": 500 }
      }
    },
    "spacing": {
      "unit": 4,
      "page_padding": { "x": 32, "y": 24 },
      "card_padding": { "x": 24, "y": 20 },
      "card_compact_padding": { "x": 20, "y": 16 },
      "gaps": {
        "between_sections": 24,
        "between_cards": 20,
        "between_list_items": 10,
        "between_meta_items": 16,
        "between_columns": 24
      }
    },
    "radius": {
      "sm": 6,
      "md": 10,
      "lg": 16,
      "pill": 999
    },
    "shadows": {
      "card": "0 10px 30px rgba(15,23,42,0.10)",
      "soft": "0 4px 16px rgba(15,23,42,0.06)"
    },
    "iconography": {
      "style": "rounded line icons",
      "size": { "sm": 14, "md": 18, "lg": 20 }
    }
  },
  "layout": {
    "grid_system": {
      "columns": 12,
      "max_width": 1280,
      "gutter": 24
    },
    "page_structure": {
      "topbar": {
        "height": 72,
        "background": "colors.background.page",
        "content": {
          "left": ["breadcrumb"],
          "right": ["notification_icon", "avatar"]
        }
      },
      "main": {
        "padding": "foundations.spacing.page_padding",
        "columns": [
          {
            "id": "left",
            "span": 8,
            "min_width": 640,
            "sections": [
              "course_header_card",
              "course_content_card"
            ]
          },
          {
            "id": "right",
            "span": 4,
            "min_width": 320,
            "sections": [
              "purchase_card",
              "includes_card",
              "trial_card"
            ]
          }
        ]
      }
    }
  },
  "components": {
    "breadcrumb": {
      "separator": "/",
      "inactive_style": "typography.styles.breadcrumb",
      "active_style": { "size": 12, "weight": 500 },
      "color_inactive": "colors.text.muted",
      "color_active": "colors.text.secondary"
    },
    "course_header_card": {
      "container": {
        "background": "colors.background.card",
        "border_radius": "radius.lg",
        "shadow": "shadows.card",
        "padding": "foundations.spacing.card_padding"
      },
      "header": {
        "rating_chip": {
          "icon": "star_filled",
          "color": "colors.status.warning",
          "text_style": "typography.small"
        },
        "meta_row": {
          "items": ["rating", "reviews_link"],
          "spacing": 6
        }
      },
      "title": {
        "style": "typography.scale.page_title",
        "margin_top": 4,
        "margin_bottom": 8
      },
      "description": {
        "style": "typography.scale.body_lg",
        "color": "colors.text.secondary",
        "margin_bottom": 16
      },
      "instructor_meta": {
        "layout": "avatar + name + dot_separator_stats",
        "avatar_size": 32,
        "stats": [
          "students_count",
          "recommendation_percentage"
        ],
        "icon_style": "inline, muted"
      },
      "bookmark_button": {
        "position": "top_right",
        "shape": "circle",
        "size": 32,
        "background": "#F3F4F6",
        "icon": "bookmark",
        "state_active_color": "colors.accent.primary"
      }
    },
    "course_content_card": {
      "container": {
        "background": "colors.background.card",
        "border_radius": "radius.lg",
        "shadow": "shadows.card",
        "padding": "foundations.spacing.card_padding",
        "margin_top": 20
      },
      "header": {
        "title": {
          "text": "Course content",
          "style": "typography.scale.section_title"
        },
        "meta_row": {
          "items": [
            "sections_count",
            "lectures_count",
            "total_length"
          ],
          "icon_style": "inline_outline",
          "text_style": "typography.small",
          "spacing": 16
        },
        "right_action": {
          "type": "text_button",
          "label": "Expand all sections",
          "color": "colors.accent.primary",
          "font": "typography.small"
        }
      },
      "accordion": {
        "section_header": {
          "background": "colors.background.card_alt",
          "border_radius": "radius.lg",
          "padding": { "x": 20, "y": 16 },
          "layout": "chevron + title + spacer + progress_pill",
          "title_style": "typography.body_lg",
          "progress_pill": {
            "background": "colors.accent.primary_soft",
            "text_color": "colors.accent.primary",
            "border_radius": "radius.pill",
            "font": "typography.small"
          }
        },
        "section_body": {
          "background": "colors.background.canvas",
          "padding": { "x": 24, "y": 8 },
          "list_item": {
            "layout": "icon_left + title + spacer + duration_or_meta",
            "icon": "play_circle_outline",
            "title_style": "typography.body",
            "meta_style": "typography.small",
            "spacing_vertical": 4
          }
        }
      }
    },
    "purchase_card": {
      "container": {
        "background": "colors.background.card",
        "border_radius": "radius.lg",
        "shadow": "shadows.card",
        "padding": "foundations.spacing.card_padding"
      },
      "cover_image": {
        "aspect_ratio": "4:3",
        "border_radius": 12,
        "margin_bottom": 16,
        "object_fit": "cover"
      },
      "price_block": {
        "current_price_style": "typography.styles.price_main",
        "current_price_color": "colors.accent.price",
        "old_price_style": "typography.styles.price_old",
        "old_price_color": "colors.text.muted",
        "discount_chip": {
          "background": "colors.status.warning",
          "text_color": "colors.text.on_accent",
          "border_radius": "radius.pill",
          "font": "typography.small",
          "icon": "flame"
        },
        "layout": "row_with_baseline_alignment",
        "spacing": 8
      },
      "primary_cta": {
        "label": "Buy course now",
        "height": 44,
        "border_radius": "radius.pill",
        "background": "colors.accent.primary",
        "text_color": "colors.text.on_accent",
        "icon": "lightning_outline",
        "margin_top": 16
      },
      "secondary_cta": {
        "label": "Send message to teacher",
        "height": 44,
        "border_radius": "radius.pill",
        "variant": "outline",
        "border_color": "colors.accent.border_strong",
        "icon": "message_outline",
        "margin_top": 8
      }
    },
    "includes_card": {
      "container": {
        "background": "colors.background.card",
        "border_radius": "radius.lg",
        "shadow": "shadows.card",
        "padding": "foundations.spacing.card_compact_padding",
        "margin_top": 16
      },
      "title": {
        "text": "This course includes",
        "style": "typography.card_title",
        "margin_bottom": 12
      },
      "item": {
        "layout": "icon_left + text_right",
        "icon_style": {
          "size": 18,
          "color": "colors.accent.secondary"
        },
        "text_style": "typography.small",
        "spacing_vertical": 6
      }
    },
    "trial_card": {
      "container": {
        "background": "colors.background.cta_dark",
        "border_radius": "radius.lg",
        "shadow": "shadows.card",
        "padding": "foundations.spacing.card_compact_padding",
        "margin_top": 16
      },
      "title_style": { "size": 14, "weight": 600, "color": "colors.text.on_dark" },
      "subtitle_style": { "size": 12, "weight": 400, "color": "rgba(249,250,251,0.8)" },
      "cta_button": {
        "label": "Preview",
        "height": 36,
        "border_radius": "radius.pill",
        "background": "#FFFFFF",
        "text_color": "#111827",
        "margin_top": 10
      }
    },
    "avatar": {
      "shape": "circle",
      "size": 32,
      "border": "2px solid #FFFFFF"
    }
  },
  "interaction": {
    "hover": {
      "buttons": {
        "primary": { "brightness": 1.05, "shadow": "shadows.soft" },
        "outline": { "background": "#EEF2FF" }
      },
      "card": {
        "lift_on_hover": true,
        "shadow": "shadows.card"
      },
      "accordion_header": {
        "background": "#EEF2FF"
      }
    },
    "focus": {
      "outline": "2px solid colors.accent.focus",
      "outline_offset": 2,
      "applies_to": ["inputs", "buttons", "links"]
    },
    "accordion": {
      "chevron_rotation": 180,
      "transition_duration_ms": 160
    },
    "transitions": {
      "duration_ms": 150,
      "easing": "ease-out",
      "properties": ["background-color", "box-shadow", "transform", "border-color"]
    }
  },
  "responsiveness": {
    "breakpoints": {
      "md": 768,
      "lg": 1024,
      "xl": 1280
    },
    "behavior": {
      "lg_plus": "two-column layout as defined",
      "md_to_lg": "right column width shrinks; cards keep stacking vertically",
      "sm_to_md": "right column stacks below left; maintain full-width cards",
      "xs": "single-column layout, with purchase card shown before course content card"
    }
  }
}
