rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Función auxiliar para verificar autenticación
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Función auxiliar para verificar tamaño de archivo (en MB)
    function isValidSize(maxSizeMB) {
      return request.resource.size < maxSizeMB * 1024 * 1024;
    }
    
    // Función auxiliar para verificar tipo de imagen
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    // Función auxiliar para verificar tipo de video
    function isVideo() {
      return request.resource.contentType.matches('video/.*');
    }
    
    // Función auxiliar para verificar tipo de PDF
    function isPDF() {
      return request.resource.contentType == 'application/pdf';
    }
    
    // Avatares de usuarios
    match /avatars/{userId}/{fileName} {
      // Lectura: público
      allow read: if true;
      // Escritura: solo el propio usuario, imágenes menores a 5MB
      allow write: if isAuthenticated() && 
                     request.auth.uid == userId && 
                     isImage() && 
                     isValidSize(5);
    }
    
    // Miniaturas de cursos
    match /courses/{courseId}/thumbnail/{fileName} {
      // Lectura: público
      allow read: if true;
      // Escritura: solo instructores, imágenes menores a 10MB
      allow write: if isAuthenticated() && 
                     isImage() && 
                     isValidSize(10);
    }
    
    // Videos de cursos
    match /courses/{courseId}/videos/{fileName} {
      // Lectura: solo usuarios autenticados
      allow read: if isAuthenticated();
      // Escritura: solo instructores, videos menores a 500MB
      allow write: if isAuthenticated() && 
                     isVideo() && 
                     isValidSize(500);
    }
    
    // Materiales de lecciones (PDFs, imágenes, etc.)
    match /lessons/{lessonId}/materials/{fileName} {
      // Lectura: solo usuarios autenticados
      allow read: if isAuthenticated();
      // Escritura: solo instructores, archivos menores a 50MB
      allow write: if isAuthenticated() && 
                     (isImage() || isPDF()) && 
                     isValidSize(50);
    }
    
    // Certificados generados
    match /certificates/{certificateId}/{fileName} {
      // Lectura: solo el estudiante dueño del certificado
      allow read: if isAuthenticated();
      // Escritura: solo el sistema (mediante Cloud Functions)
      allow write: if false;
    }
    
    // Archivos temporales
    match /temp/{userId}/{fileName} {
      // Lectura y escritura: solo el propio usuario
      allow read, write: if isAuthenticated() && 
                           request.auth.uid == userId && 
                           isValidSize(100);
    }
  }
}
